{
  "name": "SimpleTabGroupSaver",
  "version": "1.0",
  "icons": {
    "16": "stgs-logo.png",
    "48": "stgs-logo.png",
    "128": "stgs-logo.png"
  },
  "description": "SimpleTabGroupSaver",
  "permissions": ["activeTab", "declarativeContent", "storage", "tabs", "tabGroups"],
  "action": {
    "default_popup": "index.html",
    "default_icon": "stgs-logo.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "windows": "Ctrl+Shift+E",
        "mac": "Command+Shift+E",
        "chromeos": "Ctrl+Shift+E",
        "linux": "Ctrl+Shift+E"
      }
    }
  },
  "manifest_version": 3
}

